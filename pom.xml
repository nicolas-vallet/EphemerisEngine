            <!-- 					<execution> -->
            <!-- 						<id>attach-sources</id> -->
            <!-- 						<goals> -->
            <!-- 							<goal>jar</goal> -->
            <!-- 						</goals> -->
            <!-- 					</execution> -->
            <!-- 				</executions> -->
            <!-- 			</plugin> -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.7.1</version>
                <configuration/>
            </plugin>

        </plugins>
    </build>
</project>
